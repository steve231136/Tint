<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.user.numericalsecurity.FullscreenActivity">


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Switch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:gravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.user.numericalsecurity.Main2Activity"
        tools:showIn="@layout/activity_main2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f4f4">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/switch3"
                android:layout_alignBottom="@+id/switch3"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:paddingStart="15dp"
                android:text="Bienvenue"
                android:textAllCaps="false"
                android:textColor="#eccd06"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch4"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cat"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/db"
                android:gravity="center"
                android:text="Activer/Désactiver"
                android:textColor="@android:color/black"
                android:thumbTint="#eccd06"
                android:trackTint="@android:color/white" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cardV"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView16"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/get_activity"
                android:gravity="start"
                android:text="Tint est un outil de transort intelligent"
                android:textColor="#454545"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView17"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:cardCornerRadius="15dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/img"
                    tools:ignore="ContentDescription" />

            </android.support.v7.widget.CardView>


            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/switch4"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dbd1"
                android:hint="Entrez votre destination"
                android:inputType="textMultiLine"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ca"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="65dp"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <ListView
                    android:id="@+id/Listview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="true"
                    android:background="@color/colorAccent"
                    android:cacheColorHint="@android:color/black"
                    android:divider="@android:color/white"
                    android:dividerHeight="2dp"
                    android:textFilterEnabled="false"
                    android:visibility="invisible" />

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="false"
                android:layout_below="@+id/editText2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/db1"
                android:text="Valider"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView17"
                android:text="Switch Wifi"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/textView18"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_marginStart="15dp"
                android:background="@drawable/dbd"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_visibility_black_24dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button2"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="21dp"
                android:ems="10"
                android:hint="Enter SOS Number"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button2"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/switch4"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:text="Activité"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editText"
                android:layout_alignEnd="@+id/button2"
                android:layout_marginEnd="7dp"
                android:text="SOS"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible" />

            <Button
                android:id="@+id/get_activity"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/cardV"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="47dp"
                android:background="@drawable/db"
                android:onClick="requestUpdatesHandler"
                android:text="Rafraishir"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/ca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">



        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:id="@+id/designbottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            app:behavior_hideable="false"
            app:behavior_peekHeight="50dp"
            app:elevation="4dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <android.support.v7.widget.CardView
                android:id="@+id/ca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView17"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                app:cardCornerRadius="10dp"
                app:cardElevation="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="center"
                        android:tint="#696767"
                        app:srcCompat="@drawable/ic_remove_black_24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_help_black_24dp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/switch1"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:text="Besoin d'aide"
                            android:textColor="#454545"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_report_black_24dp" />

                        <TextView
                            android:id="@+id/bssid"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/ip"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:text="Signaler"
                            android:textColor="#454545"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>


    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


</RelativeLayout>
